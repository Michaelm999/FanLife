<h1><%= @fandom.title %></h1>

<h2>Source: <%= @fandom.source %></h2>
<p id="show"><%= @fandom.description %></p>

<h3>Comments</h3>
<ul>
  <% @fandom.comments.each do |a| %>
  <li>
  <%= a.content %> <br>
  -<%= a.user.name %>
  </li>
  <% end %>
</ul>

<%= form_for [@fandom, @comment] do |a| %>
  <%= a.text_area :content, placeholder: 'Comments' %>
  <%= a.submit %>
<% end %>

<div class="guide">
<%= link_to('Edit', edit_fandom_path(params[:id])) %>

<% if current_user.id === 2 %>
<%= link_to('Delete', @fandom, method: :delete, data: {confirm: 'Are you certain?'}) %>
<% end %>

<%= link_to('Unfavorite', unfavorite_path) %>

<%= link_to('Favorite', favorite_path) %>

</div>
