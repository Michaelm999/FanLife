<h1 class="fandom"><%= @fandom.title %></h1>

<h3 id="source">Source: <%= @fandom.source %></h3>
<p><%= @fandom.description %></p>

<h3>Comments:</h3>
<ul class="comments">
  <% @fandom.comments.each do |a| %>
  <li>
  <%= a.content %> <br>
  -<%= a.user.name %>
  </li>
  <% end %>
</ul>

<%= form_for [@fandom, @comment] do |a| %>
  <%= a.text_area :content, placeholder: 'Comments' %>
  <%= a.submit %>
<% end %>

<div class="guide">
<%= link_to('Edit', edit_fandom_path(params[:id])) %>

<% if current_user.id === 2 %>
<%= link_to('Delete', @fandom, method: :delete, data: {confirm: 'Are you certain?'}) %>
<% end %>

<% if current_user.fandoms.include? @fandom %>
<%= link_to('Unfavorite', unfavorite_path) %>
<% else %>
<%= link_to('Favorite', favorite_path(@fandom)) %>
<% end %>
<%= link_to('Back', fandoms_path) %>
</div>
